@model TabloidMVC.Models.UserProfile

@{
    ViewData["Title"] = "User Details";
}

<h1>Details</h1>

<div class="container">
    <h1 class="mb-4">@Model.FullName</h1>
    <div class="row">
        <div class="col-md-3">
            <img class="img-fluid rounded-circle" src="@Model.ImageLocation" alt="Default Profile Image" />
        </div>
        <div class="col-md-9">
            <div>
                <label class="font-weight-bold">Username:</label>
                <span>@Model.DisplayName</span>
            </div>
            <div>
                <label class="font-weight-bold">Email:</label>
                <span>@Model.Email</span>
            </div>
            <div>
                <label class="font-weight-bold">Created On:</label>
                <span>@Model.CreateDateTime</span>
            </div>
            <div>
                <label class="font-weight-bold">Profile Type:</label>
                <span>@Model.UserType.Name</span>
            </div>

        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
