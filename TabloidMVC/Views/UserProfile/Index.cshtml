@model IEnumerable<TabloidMVC.Models.UserProfile>

@{
    ViewData["Title"] = "Index";
}

<h1>User Profiles</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserTypeId)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item.IsActive)
            {
                <tr>
                    <td>
                        @Html.ActionLink($"{item.FullName}", "Details", new { id=item.Id })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserType.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new {}) |
                        @Html.ActionLink("Deactivate", "Delete", new { id=item.Id })
                    </td>
                </tr>
            }
        }
        <a asp-action="DeactivatedIndex" class="btn btn-outline-primary mx-1" title="View">
            Deactivated Users
        </a>
    </tbody>
</table>
