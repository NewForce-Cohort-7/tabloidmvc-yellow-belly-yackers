@model TabloidMVC.Models.Subscription

@{
    ViewData["Title"] = "Edit";
}

<h3>Are you sure you want to UNsubscribe from <span>@Model.Provider.DisplayName</span>'s posts?</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input asp-for="Id" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="ProviderUserProfileId" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="SubscriberUserProfileId" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="BeginDateTime" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="EndDateTime" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="PostId" type="hidden" />
            </div>

            <div class="form-group">
                <input type="submit" value="Unsubscribe" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Post" asp-action="Details" asp-route-id="@Model.PostId">Back to Post</a>
</div>

