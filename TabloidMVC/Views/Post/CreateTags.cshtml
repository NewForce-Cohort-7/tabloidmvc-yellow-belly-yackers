@model TabloidMVC.Models.ViewModels.PostTagViewModel

@{
    ViewData["Title"] = "CreateTags";
}

<h1>Manage Tags</h1>

<h4>Choose Tags for Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTags" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <table class="table">
                <thead>
                    <tr>
                        <th>Select</th>
                        <th>Tag</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Tags)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" value="@item.Id" name="PostTag.TagIds" checked="@Model.PostTag.TagIds.Contains(item.Id)" />
                                <input type="hidden" name="PostId" value="@Model.Post.Id" />
                            </td>
                            <td>@item.Name</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}